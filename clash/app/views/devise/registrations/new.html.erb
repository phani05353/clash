<!DOCTYPE html>
<html>

<head>

  <link href="site.css" rel="stylesheet">
</head>

<body1>

<div id="main1">
  <p1><center>Welcome to Amaze</center></p1>
  <center><h2>Sign Up Here</h2>
   <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div><%= f.input :name, required: true, autofocus: true,placeholder: "Name", label: false %></div>
   <div><p> <%= f.input :email, required: true,placeholder: "email",label: false %></p></div>
   <div><p> <%= f.input :password, required: true, placeholder: "Password", label: false,hint: ("#{@minimum_password_length} characters minimum" if @validatable) %></p></div>
    <div><p><%= f.input :password_confirmation, required: true,placeholder: "Re-enter Password", label: false %></p></div>
</div>
<div>
  <center><%= f.button :submit, "Sign up" %></center>
  </div>

<% end %>

  <center><%= render "devise/shared/links" %></center>
  </center>
</body1>
</html>